<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/displayPic"
                android:onClick="addProfilePic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/blankprofile" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <EditText
                android:id="@+id/firstNameEditText"
                android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"/>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darker_grey"
            android:layout_marginTop="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button"
                android:ems="10"
                android:padding="10dp"
                android:hint="Last Name"
                android:inputType="textPersonName"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darker_grey"
            android:layout_marginTop="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/weightEditTextNumberDecimal"
                android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button"
                android:ems="10"
                android:hint="Weight (Kgs)"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darker_grey"
            android:layout_marginTop="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/heightEditTextNumberDecimal"
                android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button"
                android:ems="10"
                android:hint="Height (m)"
                android:inputType="numberDecimal"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darker_grey"
            android:layout_marginTop="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/phoneNumberEditText"
                android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="phone"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darker_grey"
            android:layout_marginTop="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/registerProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/submitInformationButton"
                android:onClick="submitInformation"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_button"
                android:text="Submit Information"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_arrow_upward"
                android:paddingLeft="-10dp"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>