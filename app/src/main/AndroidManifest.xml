<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.run.ultimate_fitness">
    <!-- Bypasses Activity recognition permission for API level < 29 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ultimate_Fitness">
        <activity
            android:name=".VerifyOTPActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".SendOTPActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".Splash_Screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".stepCounter.StepCounterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.inbox.ChatPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.workouts.WorkoutPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.workouts.GymWorkouts"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".water.Water_Tracker_Activity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkoutsGoalPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditProfile"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangePassword"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfilePage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassword"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpInformation"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EmailSignUp"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginPage"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" /> <!-- android:windowSoftInputMode="adjustResize" -->
        <service android:name=".firebase.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>